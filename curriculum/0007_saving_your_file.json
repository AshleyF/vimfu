  "setup": [
    {
      "comment": "Set TERM for proper color support in Neovim"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "line": "rm -f hello.py .hello.py.swp .hello.py.swo"
    },
    {
      "line": "rm -f ~/.local/state/nvim/swap/*hello.py*"
    },
    {
      "line": "clear"
    }
  ],
  "steps": [
    {
      "overlay": "VimFu",
      "caption": "Saving Your File",
      "duration": 3.0
    },
    {
      "wait": 0.7
    },
    {
      "say": "Let's create a file and save it."
    },
    {
      "line": "nvim hello.py",
      "delay": 0.05
    },
    {
      "waitForScreen": "~",
      "timeout": 10.0
    },
    {
      "ifScreen": "swap file",
      "thenKeys": "d"
    },
    {
      "wait": 0.3
    },
    {
      "keys": "i"
    },
    {
      "wait": 0.3
    },
    {
      "type": "print(\"hello world\")"
    },
    {
      "wait": 0.3
    },
    "escape",
    {
      "wait": 0.5
    },
    {
      "say": "To save, type colon W.",
      "wait": false
    },
    {
      "wait": 0.3
    },
    {
      "type": ":w"
    },
    {
      "wait": 0.5
    },
    {
      "say": "See the command at the bottom? Colon opens the command line. W means write.",
      "wait": false
    },
    {
      "wait": 0.8
    },
    {
      "say": "Press Enter.",
      "wait": false
    },
    "enter",
    {
      "wait": 0.8
    },
    {
      "say": "Saved. Look at the bottom. It confirms the file was written."
    },
    {
      "say": "Let's edit and save again.",
      "wait": false
    },
    {
      "wait": 0.2
    },
    {
      "keys": "o"
    },
    {
      "wait": 0.3
    },
    {
      "type": "print(\"saved!\")"
    },
    {
      "wait": 0.3
    },
    "escape",
    {
      "wait": 0.3
    },
    {
      "say": "Colon W, Enter.",
      "wait": false
    },
    {
      "type": ":w"
    },
    "enter",
    {
      "wait": 0.8
    },
    {
      "say": "That's it. Colon W saves your file. You'll type it a hundred times a day."
    }
  ],
  "teardown": [
    {
      "comment": "Quit nvim without saving"
    },
    "escape",
    {
      "type": ":q!"
    },
    "enter",
    {
      "comment": "Clean up"
    },
    {
      "line": "rm -f hello.py"
    }
