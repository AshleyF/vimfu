  "setup": [
    {
      "comment": "Set TERM for proper color support in Neovim"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "line": "rm -f loot.py .loot.py.swp .loot.py.swo"
    },
    {
      "line": "rm -f ~/.local/state/nvim/swap/*loot.py*"
    },
    {
      "comment": "Create demo file — game inventory"
    },
    {
      "writeFile": "loot.py",
      "content": "items = \"axe, bow, cup, gem, orb\"\nstats = \"hp:5, mp:3, xp:0, gp:9\"\nspells = \"fire, ice, bolt, heal\""
    },
    {
      "line": "clear"
    },
    {
      "comment": "Launch nvim before recording"
    },
    {
      "line": "nvim loot.py"
    },
    {
      "waitForScreen": "items",
      "timeout": 10.0
    },
    {
      "ifScreen": "swap file",
      "thenKeys": "d"
