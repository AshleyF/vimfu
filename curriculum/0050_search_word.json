  "setup": [
    {
      "comment": "Set TERM for proper color support in Neovim"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "line": "rm -f trace.py .trace.py.swp .trace.py.swo"
    },
    {
      "line": "rm -f ~/.local/state/nvim/swap/*trace.py*"
    },
    {
      "comment": "Create demo file"
    },
    {
      "writeFile": "trace.py",
      "content": "name = \"vim\"\nkind = \"tool\"\nname = \"nano\"\nkind = \"tool\"\nname = \"code\"\nkind = \"app\""
    },
    {
      "line": "clear"
    },
    {
      "comment": "Launch nvim before recording"
    },
    {
      "line": "nvim trace.py"
    },
    {
      "waitForScreen": "name",
      "timeout": 10.0
    },
    {
      "ifScreen": "swap file",
      "thenKeys": "d"
    }
  ],
  "steps": [
    {
      "overlay": "VimFu",
      "caption": "Search Word Under Cursor",
      "duration": 3.0
    },
    {
      "wait": 0.7
    },
    {
      "say": "Star searches for the word under your cursor. One key, no typing."
    },
    {
      "wait": 0.3
    },
    {
      "say": "Cursor is on name. Press star.",
      "wait": false
    },
    {
      "wait": 0.3
    },
    {
      "keys": "*"
    },
    {
      "wait": 0.6
    },
    {
