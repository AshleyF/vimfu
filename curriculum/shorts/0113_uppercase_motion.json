  "setup": [
    {
      "comment": "Set TERM for proper color support in Neovim"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "line": "rm -f spell.py .spell.py.swp .spell.py.swo"
    },
    {
      "line": "rm -f ~/.local/state/nvim/swap/*spell.py*"
    },
    {
      "comment": "Create demo file with lowercase names that should be uppercased"
    },
    {
      "writeFile": "spell.py",
      "content": "max_mana = 200\nfire_damage = 50\nice_shield = True\ncrit_chance = 0.15\nboss_name = \"dragon\""
    },
    {
      "line": "clear"
    },
    {
      "comment": "Launch nvim before recording"
    },
    {
      "line": "nvim spell.py"
