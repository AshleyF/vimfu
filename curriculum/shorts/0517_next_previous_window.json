  "setup": [
    {
      "comment": "Kill any stale tmux sessions"
    },
    {
      "line": "tmux kill-server 2>/dev/null; true"
    },
    {
      "comment": "Set TERM for proper color support"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "line": "rm -f wizard.py .wizard.py.swp .wizard.py.swo"
    },
    {
      "line": "rm -f ~/.local/state/nvim/swap/*wizard.py*"
    },
    {
      "comment": "Create demo files"
    },
    {
      "writeFile": "wizard.py",
      "content": "class Wizard:\n    def __init__(self, name):\n        self.name = name\n        self.mana = 100\n\n    def cast(self, spell):\n        cost = spell.mana_cost\n        if self.mana >= cost:\n            self.mana -= cost\n            return spell.effect()\n        return \"Not enough mana\"\n"
    },
    {
      "writeFile": "server.txt",
      "content": "✔ Listening on :8080\n\n  GET  /spells     200  8ms\n  POST /cast       201  23ms\n  GET  /inventory  200  5ms\n  GET  /health     200  2ms\n"
    },
    {
      "writeFile": "deploy.txt",
      "content": "▸ Building image...     done\n▸ Pushing to registry... done\n▸ Rolling out pods...   2/3\n▸ Health check...       wait\n"
    },
    {
      "line": "clear"
    },
    {
      "comment": "Launch tmux"
    },
    {
      "line": "tmux"
    },
    {
      "waitForScreen": "0:zsh",
      "timeout": 30.0
    },
    {
      "comment": "Window 0 — open nvim (real editor)"
    },
    {
      "line": "nvim wizard.py"
    },
    {
      "ifScreen": "swap file",
      "thenKeys": "d"
    },
    {
      "waitForScreen": "Wizard",
      "timeout": 30.0
    },
    {
      "comment": "Window 1 — server output"
    },
    {
      "keys": "\u0002"
    },
    {
      "keys": "c"
    },
    {
      "waitForScreen": "1:zsh",
      "timeout": 5.0
    },
    {
      "line": "clear && cat server.txt"
    },
    {
      "comment": "Window 2 — deploy log"
    },
    {
      "keys": "\u0002"
    },
    {
      "keys": "c"
    },
    {
      "waitForScreen": "2:zsh",
      "timeout": 5.0
    },
    {
      "line": "clear && cat deploy.txt"
    },
    {
      "comment": "Go back to window 0 (nvim)"
    },
    {
      "keys": "\u0002"
    },
    {
      "keys": "0"
    },
    {
      "waitForScreen": "Wizard",
      "timeout": 5.0
    }
