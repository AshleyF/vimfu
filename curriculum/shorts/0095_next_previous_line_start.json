  "setup": [
    {
      "comment": "Set TERM for proper color support in Neovim"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "line": "rm -f robot.py .robot.py.swp .robot.py.swo"
    },
    {
      "line": "rm -f ~/.local/state/nvim/swap/*robot.py*"
    },
    {
      "comment": "Create the demo file with indented lines"
    },
    {
      "writeFile": "robot.py",
      "content": "class Robot:\n    name = \"Bolt\"\n    speed = 10\n    battery = 100\n\n    def move(self, dist):\n        self.battery -= dist\n        return self.speed * dist\n\n    def charge(self):\n        self.battery = 100\n        return \"fully charged\""
    },
    {
      "line": "clear"
    },
    {
      "comment": "Launch nvim before recording"
    },
    {
      "line": "nvim robot.py"
    },
    {
      "waitForScreen": "All",
      "timeout": 30.0
    },
    {
      "ifScreen": "swap file",
      "thenKeys": "d"
    }
  ],
  "steps": [
