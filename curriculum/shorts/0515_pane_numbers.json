  "setup": [
    {
      "comment": "Kill any stale tmux sessions"
    },
    {
      "line": "tmux kill-server 2>/dev/null; true"
    },
    {
      "comment": "Set TERM for proper color support"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "line": "rm -f robot.py .robot.py.swp .robot.py.swo"
    },
    {
      "line": "rm -f ~/.local/state/nvim/swap/*robot.py*"
    },
    {
      "comment": "Create demo files"
    },
    {
      "writeFile": "robot.py",
      "content": "class Robot:\n    def __init__(self):\n        self.battery = 100\n    def speak(self):\n        print(\"Beep!\")\n"
    },
    {
      "writeFile": "status.txt",
      "content": "● redis   :6379  ready\n● postgres :5432  ready\n● worker  :---   idle\n"
    },
    {
      "writeFile": "tests.txt",
      "content": "PASS test_robot.py\n  ✓ battery starts full\n  ✓ speak returns beep\n"
    },
    {
      "line": "clear"
    },
    {
      "comment": "Launch tmux"
    },
    {
      "line": "tmux"
    },
    {
      "waitForScreen": "0:zsh",
      "timeout": 30.0
    },
    {
      "comment": "Increase display-panes timeout so numbers stay visible"
    },
    {
      "line": "tmux set display-panes-time 5000"
    },
    {
      "comment": "Open nvim in pane 0 (top)"
    },
    {
      "line": "nvim robot.py"
    },
    {
      "ifScreen": "swap file",
      "thenKeys": "d"
    },
    {
      "waitForScreen": "Beep",
      "timeout": 30.0
    },
    {
      "comment": "Split for pane 1 (middle)"
    },
    {
      "keys": "\u0002"
    },
    {
      "keys": "\""
    },
    {
      "waitForScreen": "vimfu",
      "timeout": 5.0
    },
    {
      "comment": "Split for pane 2 (bottom)"
    },
    {
      "keys": "\u0002"
    },
    {
      "keys": "\""
    },
    {
      "wait": 1.0
    },
    {
      "comment": "Pane 2 (bottom) — test results"
    },
    {
      "line": "clear && cat tests.txt"
    },
    {
      "comment": "Navigate to pane 1 (middle)"
    },
    {
      "keys": "\u0002"
    },
    {
      "keys": "\u001b[A"
    },
    {
      "wait": 0.5
    },
    {
