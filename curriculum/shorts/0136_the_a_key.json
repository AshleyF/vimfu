    },
    {
      "wait": 0.3
    },
    {
      "keys": "fk",
      "overlay": "find k"
    },
    {
      "wait": 0.3
    },
    {
      "say": "I is insert before. A is append after.",
      "wait": false
    },
    {
      "wait": 0.3
    },
    {
      "keys": "a",
      "overlay": "append"
    },
    {
      "type": "ers"
    },
    "escape",
    {
      "wait": 0.6
    },
    {
      "say": "Whiskers. Appended after the K."
    },
    {
      "wait": 0.3
    },
    {
      "comment": "--- Demo 2: mew to meow ---"
    },
    {
      "say": "Next line. Change mew to meow.",
      "wait": false
    },
    {
      "wait": 0.3
    },
    {
      "keys": "+",
      "overlay": "next line"
    },
    {
      "wait": 0.2
    },
    {
      "keys": "fe",
      "overlay": "find e"
    },
    {
      "wait": 0.3
    },
