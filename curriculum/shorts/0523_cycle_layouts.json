  "setup": [
    {
      "comment": "Kill any stale tmux sessions"
    },
    {
      "line": "tmux kill-server 2>/dev/null; true"
    },
    {
      "comment": "Set TERM for proper color support"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "comment": "Create content for panes"
    },
    {
      "writeFile": "code.txt",
      "content": "def scan():\n    bots = find_all()\n    for b in bots:\n        b.wake_up()\n    return len(bots)\n"
    },
    {
      "writeFile": "sensors.txt",
      "content": "TEMP  72°F  ✓\nHUMID 45%   ✓\nPRESS 1013  ✓\nLIGHT 820lx ✓\nBATT  98%   ✓\n"
    },
    {
      "writeFile": "tests.txt",
      "content": "✓ boot sequence\n✓ motor check\n✓ sensor ping\n✗ wifi link\n3/4 passed\n"
    },
    {
      "line": "clear"
    },
    {
      "comment": "Launch tmux"
    },
    {
      "line": "tmux"
    },
    {
      "waitForScreen": "0:zsh",
      "timeout": 30.0
    },
    {
      "comment": "Pane 0 — robot code"
    },
    {
      "line": "clear && cat code.txt"
    },
    {
      "comment": "Split and show sensors"
    },
    {
      "line": "tmux split-window"
    },
    {
      "line": "cd ~/vimfu && clear && cat sensors.txt"
    },
    {
      "comment": "Split and show tests"
    },
    {
      "line": "tmux split-window -h"
    },
    {
      "line": "cd ~/vimfu && clear && cat tests.txt"
    },
    {
      "comment": "Go back to pane 0"
    },
    {
      "line": "tmux select-pane -t 0"
    }
