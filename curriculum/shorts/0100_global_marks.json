    {
      "comment": "Create two files to jump between"
    },
    {
      "writeFile": "hero.py",
      "content": "name = \"Kira\"\nhp = 100\nmp = 40\nweapon = \"staff\"\n\ndef attack(target):\n    dmg = roll(2, 8)\n    target.hp -= dmg\n    return dmg"
    },
    {
      "writeFile": "enemy.py",
      "content": "name = \"Goblin\"\nhp = 30\natk = 5\nloot = \"gold coin\"\n\ndef take_hit(dmg):\n    global hp\n    hp -= dmg\n    return hp > 0"
    },
    {
      "line": "clear"
    },
    {
      "comment": "Launch nvim with hero.py"
    },
    {
      "line": "nvim hero.py"
    },
    {
      "waitForScreen": "All",
