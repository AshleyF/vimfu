  "setup": [
    {
      "comment": "Kill any stale tmux sessions"
    },
    {
      "line": "tmux kill-server 2>/dev/null; true"
    },
    {
      "comment": "Set TERM for proper color support"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "line": "rm -f app.py .app.py.swp .app.py.swo"
    },
    {
      "line": "rm -f ~/.local/state/nvim/swap/*app.py*"
    },
    {
      "comment": "Create a Python file for the editor pane"
    },
    {
      "writeFile": "app.py",
      "content": "from flask import Flask\n\napp = Flask(__name__)\n\n@app.route('/')\ndef home():\n    return 'Hello!'\n\napp.run(port=5000)"
    },
    {
      "line": "clear"
    },
    {
      "comment": "Launch tmux"
    },
    {
      "line": "tmux"
    },
    {
      "waitForScreen": "0:zsh",
      "timeout": 30.0
    },
    {
      "comment": "Open nvim in left pane"
    },
    {
      "line": "nvim app.py"
    },
    {
      "ifScreen": "swap file",
      "thenKeys": "d"
    },
    {
      "waitForScreen": "Flask",
      "timeout": 10.0
    },
    {
      "comment": "Split vertically — right pane gets a shell"
    },
    {
      "keys": "\u0002"
    },
    {
      "keys": "%"
    },
    {
      "waitForScreen": "vimfu",
      "timeout": 5.0
    },
    {
      "comment": "Show fake server output in right pane"
    },
    {
      "line": "clear && printf '\\033[32m * Running on http://127.0.0.1:5000\\033[0m\\n * Debug mode: on\\n'"
    },
    {
      "comment": "Go back to left pane (nvim)"
    },
    {
      "line": "tmux select-pane -t 0"
    }
  ],
