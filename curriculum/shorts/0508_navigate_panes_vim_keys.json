  "setup": [
    {
      "comment": "Kill any stale tmux sessions"
    },
    {
      "line": "tmux kill-server 2>/dev/null; true"
    },
    {
      "comment": "Set TERM for proper color support"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "line": "clear"
    },
    {
      "comment": "Launch tmux before recording"
    },
    {
      "line": "tmux"
    },
    {
      "waitForScreen": "0:zsh",
      "timeout": 30.0
    },
    {
      "comment": "Set up top pane"
    },
    {
      "line": "clear; echo '[ TOP ]'"
    },
    {
      "comment": "Create horizontal split"
    },
    {
      "line": "tmux split-window"
    },
    {
      "line": "clear; echo '[ LEFT ]'"
    },
    {
      "comment": "Create vertical split in bottom pane"
    },
    {
      "line": "tmux split-window -h"
    },
    {
      "line": "clear; echo '[ RIGHT ]'"
    },
    {
      "comment": "Bind vim-style pane navigation keys"
    },
    {
      "line": "tmux bind h select-pane -L"
    },
    {
      "line": "tmux bind j select-pane -D"
    },
    {
      "line": "tmux bind k select-pane -U"
    },
    {
      "line": "tmux bind l select-pane -R"
    },
    {
      "comment": "Go back to left pane for demo start"
    },
    {
      "line": "tmux select-pane -t 1"
    }
  ],
