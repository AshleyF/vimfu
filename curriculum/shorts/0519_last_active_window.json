  "setup": [
    {
      "comment": "Kill any stale tmux sessions"
    },
    {
      "line": "tmux kill-server 2>/dev/null; true"
    },
    {
      "comment": "Set TERM for proper color support"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "line": "rm -f email_send.py .email_send.py.swp .email_send.py.swo"
    },
    {
      "line": "rm -f ~/.local/state/nvim/swap/*email_send.py*"
    },
    {
      "comment": "Create demo files"
    },
    {
      "writeFile": "email_send.py",
      "content": "def send_email(to, body):\n    msg = build_mime(to, body)\n    with smtplib.SMTP(HOST) as s:\n        s.starttls()\n        s.login(USER, PASS)\n        s.send_message(msg)\n    return True\n"
    },
    {
      "writeFile": "terminal.txt",
      "content": "$ python manage.py migrate\n  Applying auth.0001... OK\n  Applying core.0002... OK\n\n$ python manage.py runserver\n  Starting dev server at :8000\n"
    },
    {
      "writeFile": "docs.txt",
      "content": "smtplib.SMTP\n\n  .starttls()  — upgrade to TLS\n  .login(u, p) — authenticate\n  .send_message(msg)\n\n  See also: email.mime\n"
    },
    {
      "line": "clear"
    },
    {
      "comment": "Launch tmux"
    },
    {
      "line": "tmux"
    },
    {
      "waitForScreen": "0:zsh",
      "timeout": 30.0
    },
    {
      "comment": "Window 0 — open nvim (real editor)"
    },
    {
      "line": "nvim email_send.py"
    },
    {
      "ifScreen": "swap file",
      "thenKeys": "d"
    },
    {
      "waitForScreen": "send_email",
      "timeout": 30.0
    },
    {
      "comment": "Window 1 — terminal output"
    },
    {
      "keys": "\u0002"
    },
    {
      "keys": "c"
    },
    {
      "waitForScreen": "1:zsh",
      "timeout": 5.0
    },
    {
      "line": "clear && cat terminal.txt"
    },
    {
      "comment": "Window 2 — docs"
    },
    {
      "keys": "\u0002"
    },
    {
      "keys": "c"
    },
    {
      "waitForScreen": "2:zsh",
      "timeout": 5.0
    },
    {
      "line": "clear && cat docs.txt"
    },
    {
      "comment": "Go back to window 0 (nvim)"
    },
    {
      "keys": "\u0002"
    },
    {
      "keys": "0"
    },
    {
      "waitForScreen": "send_email",
      "timeout": 5.0
    }
