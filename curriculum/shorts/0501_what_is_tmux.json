  "setup": [
    {
      "comment": "Kill any stale tmux sessions"
    },
    {
      "line": "tmux kill-server 2>/dev/null; true"
    },
    {
      "comment": "Add vim-style pane nav to tmux config"
    },
    {
      "line": "printf 'bind h select-pane -L\nbind j select-pane -D\nbind k select-pane -U\nbind l select-pane -R\n' > ~/.tmux.conf"
    },
    {
      "comment": "Set TERM for proper color support"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "comment": "Create a sample file for the demo"
    },
    {
      "line": "printf 'def greet():\n    print(\"Hello!\")\n\ngreet()\n' > hello.py"
    },
    {
      "line": "clear"
    },
    {
      "waitForScreen": "vimfu",
      "timeout": 10.0
    }
