  "setup": [
    {
      "comment": "Clean start"
    },
    {
      "line": "tmux kill-server 2>/dev/null; true"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Add vim-style pane nav to tmux config"
    },
    {
      "line": "printf 'bind h select-pane -L\nbind j select-pane -D\nbind k select-pane -U\nbind l select-pane -R\n' > ~/.tmux.conf"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "comment": "Create a Python file to edit"
    },
    {
      "writeFile": "~/vimfu/hello.py",
      "content": "def greet(name):\n    print(f'Hello {name}')\n\ngreet('world')\n"
    },
    {
      "line": "clear"
    },
    {
      "comment": "Start tmux"
    },
    {
      "line": "tmux"
    },
    {
      "waitForScreen": "0:zsh",
      "timeout": 30.0
    },
    {
      "comment": "Split into two panes — stacked top/bottom"
    },
    {
      "keys": "\u0002\"",
      "overlay": ""
    },
    {
      "wait": 1.0
    },
    {
      "comment": "Open vim in the bottom pane (cursor is already here after split)"
    },
    {
      "line": "cd ~/vimfu && nvim hello.py"
    },
    {
      "waitForScreen": "All",
      "timeout": 30.0
    }
  ],
  "steps": [
    {
      "comment": "--- Title card ---"
    },
    {
      "overlay": "VimFu",
