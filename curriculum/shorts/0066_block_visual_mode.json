  "setup": [
    {
      "comment": "Set TERM for proper color support in Neovim"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "line": "rm -f grid.py .grid.py.swp .grid.py.swo"
    },
    {
      "line": "rm -f ~/.local/state/nvim/swap/*grid.py*"
    },
    {
      "comment": "Create demo file — aligned data grid"
    },
    {
      "writeFile": "grid.py",
      "content": "# score board\nalice  = 100\nbob    = 200\ncarol  = 300\ndave   = 400\neve    = 500"
    },
    {
      "line": "clear"
    },
    {
      "comment": "Launch nvim before recording"
    },
    {
      "line": "nvim grid.py"
    },
    {
      "waitForScreen": "All",
      "timeout": 30.0
    },
    {
      "ifScreen": "swap file",
      "thenKeys": "d"
    }
  ],
  "steps": [
    {
      "overlay": "VimFu",
      "caption": "Block Visual Mode",
      "duration": 3.0
    },
    {
