{
  "title": "VimFu — Toggle Case Motion",
  "description": "G tilde plus a motion toggles the case of every character in the range. Uppercase becomes lowercase, lowercase becomes uppercase.",
  "speed": 0.55,
  "rows": 20,
  "cols": 40,
  "humanize": 0.7,
  "seed": 256,
  "ttsVoice": "echo",
