  "setup": [
    {
      "comment": "Set TERM for proper color support in Neovim"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "line": "rm -f fight.py .fight.py.swp .fight.py.swo"
    },
    {
      "line": "rm -f ~/.local/state/nvim/swap/*fight.py*"
    },
    {
      "comment": "Create demo file — boss battles"
    },
    {
      "writeFile": "fight.py",
      "content": "hero = fight(\"dragon\", 50)\nsage = fight(\"goblin\", 10)\nking = fight(\"troll\", 30)"
    },
    {
      "line": "clear"
    },
    {
      "comment": "Launch nvim before recording"
    },
    {
      "line": "nvim fight.py"
    },
    {
      "waitForScreen": "hero",
      "timeout": 10.0
    },
    {
      "ifScreen": "swap file",
      "thenKeys": "d"
    }
  ],
  "steps": [
