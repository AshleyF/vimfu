  "setup": [
    {
      "comment": "Set TERM for proper color support in Neovim"
    },
    {
      "line": "export TERM=xterm-256color"
    },
    {
      "comment": "Prepare workspace"
    },
    {
      "line": "mkdir -p ~/vimfu && cd ~/vimfu"
    },
    {
      "line": "rm -f cats.py .cats.py.swp .cats.py.swo"
    },
    {
      "line": "rm -f ~/.local/state/nvim/swap/*cats.py*"
    },
    {
      "comment": "Create demo file — cat mood tracker"
    },
    {
      "writeFile": "cats.py",
      "content": "mood = \"hungry\"\nnaps = 5\nmood = \"playful\"\nnaps = 2\nmood = \"grumpy\"\nnaps = 9\nmood = \"zoomies\"\nnaps = 0\nmood = \"sleepy\"\nnaps = 12"
    },
    {
      "line": "clear"
    },
    {
      "comment": "Launch nvim before recording"
    },
    {
      "line": "nvim cats.py"
    },
    {
      "waitForScreen": "mood",
      "timeout": 10.0
    },
    {
      "ifScreen": "swap file",
      "thenKeys": "d"
    }
  ],
